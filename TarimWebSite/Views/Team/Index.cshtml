@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Görsel
                            </th>
                            <th>
                                İsim
                            </th>
                            <th>
                                Görev
                            </th>
                            <th>
                                Sil 
                            </th>
                            <th>
                                Düzenle
                            </th>
                        </tr>
                    </thead>
                    <tbody>


                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td>Hiç Çalışan Bulunmadı</td>
                            </tr>
                        }
                       

                        @foreach(var item  in Model ){
                           
                           
                            <tr>
                                <td> @item.TeamID</td>
                                <td class="py-1">
                                 <img src="@item.ImageUrl" alt="image" />
                                </td>
                                <td> @item.Name</td>
                                <td> @item.Title</td>
                                <td style=" padding: 8px; text-align: center; width: 100px;">
                                    <a href="/Team/DeleteTeam/@item.TeamID">
                                        <button type="button" class="btn btn-danger btn-sm" style="width: 100%;">Kişi Sil</button>
                                    </a>
                                </td>
                                <td style=" padding: 8px; text-align: center; width: 160px;">
                                    <a href="/Team/EditTeam/@item.TeamID">
                                        <button type="button" class="btn btn-sm" style="width: 100%; background-color: #7FFFD4; color: #000;">Kişi Güncelle</button>
                                    </a>
                                </td>
                             </tr>
                       }
                  
                    </tbody>

                </table>
                <br />
                <a href="/Team/AddTeam">
                    <button type="button" style="background-color:#008B8B; color:white;" class="btn btn-success">Takım Arkadaşı Ekle</button>
                </a>


                <br />
            </div>
        </div>
    </div>
</div>

