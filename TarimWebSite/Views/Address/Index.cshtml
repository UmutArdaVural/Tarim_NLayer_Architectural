@using EntityLayer.Concrete
@model List<Adress>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">

        <div class="card-body">

            <h4 class="card-title">Duyuru Listesi</h4>
            <br />
            <div class="table-responsive">


                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Description1
                            </th>
                            <th>
                                Description2
                            </th>
                            <th>
                                Description3
                            </th>
                            <th>
                                Description4
                            </th>
                            <th>
                                MapInfo
                            </th>
                        </tr>
                    </thead>
                    <tbody>



                        @foreach (var item in Model)
                        {
                            if (Model == null)
                            {
                                <tr> Hiç Adres Bulunmadı </tr>
                                return;
                            }

                            <tr>
                                <td> @item.AdressID</td>

                                <td> @item.Description1</td>
                                <td> @item.Description2</td>
                                <td> @item.Description3</td>
                                <td> @item.Description4</td>
                                <td> @item.Mapinfo</td>
                                
                                <td style=" padding: 8px; text-align: center; width: 160px;">
                                    <a href="/Address/EditAddress/@item.AdressID">
                                        <button type="button" class="btn btn-sm" style="width: 100%; background-color: #7FFFD4; color: #000;">Adres Güncelle</button>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
                <br />
              


                <br />
            </div>
        </div>
    </div>
</div>

