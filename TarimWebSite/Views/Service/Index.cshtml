@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Hizmet Listesi</h1>
            <p class="card-description"></p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered" style="border: 1px solid gray">
                    <thead>
                        <tr>
                            <th style="width: 20px;">#</th>
                            <th style ="width: 50px;">Başlık</th>
                            <th style="width: 20px;">Sil</th>
                            <th style="width: 20px;">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="border: 1px solid gray; background-color: @(item.ServiceID % 3 == 0 ?  "#FFFFFF" :"#F5F5F5" );">



                                <td style="border: 1px solid gray; padding: 8px;">@item.ServiceID</td>
                                <td style="border: 1px solid gray; padding: 8px;">@item.Title</td>
                                <td style="border: 1px solid gray; padding: 8px; text-align: center; width: 20px;">
                                    <a href="/Service/DeleteService/@item.ServiceID">
                                        <button type="button" class="btn btn-danger btn-sm" style="width: 100%;">Hizmet Sil</button>
                                    </a>
                                </td>
                                <td style="border: 1px solid #90caf9; padding: 8px; text-align: center; width: 20px;">
                                    <a href="/Service/EditService/@item.ServiceID">
                                        <button type="button" class="btn btn-info btn-sm" style="width: 100%;">Hizmet Güncelle</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Service/AddService">
                <button type="button" class="btn btn-success">Hizmet Ekle</button>
            </a>

            <br />
        </div>
    </div>

</div>




