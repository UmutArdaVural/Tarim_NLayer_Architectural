@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditService</h1>

<form method="post">
    <div class="table-responsive">
        @Html.HiddenFor(x=>x.ServiceID)
        <table class="table table-striped">
            <tr>
                <td>@Html.LabelFor(model => model.Title, "Başlık", new { @class = "text-success" })</td>
                <td><input type="text" asp-for="Title" class="form-control border-primary" /></td>

            </tr>
            <tr>
                <td> </td>
                <td> <span asp-validation-for="Title" class="text-danger"> </span> </td>
            </tr>


            <tr>
                <td>@Html.LabelFor(model => model.Image, "Görsel Yolu", new { @class = "text-info" })</td>
                <td><input type="text" asp-for="Image" class="form-control border-info" /></td>


            </tr>

            <tr>
                <td> </td>
                <td><span asp-validation-for="Image" class="text-danger"> </span> </td>

            </tr>

            <tr>
                <td>@Html.LabelFor(model => model.Description, "Açıklama", new { @class = "text-warning" })</td>
                <td><input type="text" asp-for="Description" class="form-control border-warning" /></td>

            </tr>
            <tr>
                <td> </td>
                <td><span asp-validation-for="Description" class="text-danger"> </span> </td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-success">Değişikleri Kaydet</button>
                </td>
            </tr>
        </table>
    </div>
</form>