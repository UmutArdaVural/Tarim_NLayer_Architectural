@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">

        <div class="card-body">

            <h4 class="card-title">Mesajlar </h4>
            <br />
            <div class="table-responsive">


                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                İSİM 
                            </th>
                            <th>
                                MAİL
                            </th>
                            <th>
                                Tarih
                            </th>
                            <th>
                                Sil
                            </th>
                            <th>
                                DETAYLAR
                            </th>
                        </tr>
                    </thead>
                    <tbody>



                        @foreach (var item in Model)
                        {
                            if (Model == null)
                            {
                                <tr> Hiç Mesaj Bulunmadı </tr>
                                return;
                            }

                            <tr>
                                <td> @item.ContactID</td>

                                <td> @item.Name</td>
                                <td> @item.Mail</td>
                                <td> @item.date</td>
                                <td style=" padding: 8px; text-align: center; width: 100px;">
                                    <a href="/Contact/DeleteContact/@item.ContactID">
                                        <button type="button" class="btn btn-danger btn-sm" style="width: 100%;"> Mesajı Sil </button>
                                    </a>
                                </td>
                                <td style=" padding: 8px; text-align: center; width: 160px;">
                                    <a href="/Contact/Details/@item.ContactID">
                                        <button type="button" class="btn btn-sm" style="width: 100%; background-color: #7FFFD4; color: #000;">Mesaj Detayları </button>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
                <br />
               


                <br />
            </div>
        </div>
    </div>
</div>



