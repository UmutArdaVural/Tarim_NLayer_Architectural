@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1> </h1>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Mesaj Detayları  </h4>
        <p class="card-description">
            Mesaj Bilgileri
        </p>
        <form method="post" class="forms-sample">

            <div class="form-group">
                @Html.HiddenFor(x => x.ContactID)
                <label for="exampleInputUsername1">İsim </label>
                <input type="text" class="form-control" placeholder="Takım Arkadaşı İsmi " asp-for="Name" readonly>

                @if (ViewData.ModelState["Name"] != null && ViewData.ModelState["Name"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Name"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Mail Bilgisi </label>
                <input type="text" class="form-control" placeholder="Görev" asp-for="Mail" readonly>

                @if (ViewData.ModelState["Mail"] != null && ViewData.ModelState["Mail"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Mail"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1"> Gönderilme Tarihi</label>
                <input type="text" class="form-control" placeholder="Resim Yolu" asp-for="date" readonly>
                @if (ViewData.ModelState["date"] != null && ViewData.ModelState["date"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["date"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1"> Mesaj İçeriği  </label>
<textarea style="max-height: 900px; height: 400px; width: 100%; resize: none; overflow-y: auto;"
          type="text"
          class="form-control"
          placeholder="Facebook Adresi"
          asp-for="Message"
          readonly
          oninput="this.style.height = 'auto'; this.style.height = this.scrollHeight + 'px';">
</textarea>

                @if (ViewData.ModelState["Message"] != null && ViewData.ModelState["Message"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Message"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }
            </div>
            
            

            
            <a href="/Contact/Index" class="btn btn-light">Geri Dön</a>
        </form>
    </div>

</div>
<br />

