@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h1> </h1>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Görsel Kayıt Formu  </h4>
        <p class="card-description">
            Kişisel Bilgiler
        </p>
        <form method="post" class="forms-sample">
            <div class="form-group">
                <label for="exampleInputUsername1">Başlık </label>
                <input type="text" class="form-control" placeholder="Başlık   " asp-for="Title">

                @if (ViewData.ModelState["Başlık"] != null && ViewData.ModelState["Başlık"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Başlık"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Duyuru  İçeriği </label>
                <input type="text" class="form-control" placeholder="Görev" asp-for="Description">
                @if (ViewData.ModelState["Description"] != null && ViewData.ModelState["Description"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Description"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1"> Resim Yolu</label>
                <input type="text" class="form-control" placeholder="Resim Yolu" asp-for="ImageUrl">
                @if (ViewData.ModelState["ImageUrl"] != null && ViewData.ModelState["ImageUrl"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["ImageUrl"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }
            </div>
          
            <div class="form-check form-check-flat form-check-primary">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" id="onay" name="onay" value="true">
                    Onay
                </label>
            </div>
            @if (ViewData.ModelState["onay"] != null && ViewData.ModelState["onay"].Errors.Any())
            {
                <div class="alert alert-danger mt-2">
                    @ViewData.ModelState["onay"]?.Errors.FirstOrDefault()?.ErrorMessage
                </div>
            }

            <button type="submit" class="btn btn-primary me-2">Kayıt Ekle </button>
            <a href="/Image/Index" class="btn btn-light">Geri Dön</a>
        </form>
    </div>

</div>
<br />