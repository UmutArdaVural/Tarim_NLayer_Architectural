@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1> </h1>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Duyuru Kayıt Formu  </h4>
        <p class="card-description">
           
        </p>
        <form method="post" class="forms-sample">
            <div class="form-group">
                <label for="exampleInputUsername1">Duyuru Başlık  </label>
                <input type="text" style="background-color:azure" class="form-control" placeholder=" Duyuru İsmi " asp-for="Title">

                @if (ViewData.ModelState["Title"] != null && ViewData.ModelState["Title"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Title"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1"> Duyuru İçeriği </label>
                <input type="text" style="background-color:azure" class="form-control" placeholder="Duyuru İçeriği" asp-for="Description">
                @if (ViewData.ModelState["Description"] != null && ViewData.ModelState["Description"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Description"].Errors)
                        {
                            <span>@error.ErrorMessage</span>

                            <br />
                        }
                    </div>
                }
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Durum</label>
                <select style="color:blueviolet ; background-color:azure" class="form-control" id="Status" name="Status" asp-for="Status">
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
                @if (ViewData.ModelState["Status"] != null && ViewData.ModelState["Status"].Errors.Any())
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState["Status"].Errors)
                        {
                            <span>@error.ErrorMessage</span>
                            <br />
                        }
                    </div>
                }

            </div>

            <div class="form-check form-check-flat form-check-primary">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" id="onay" name="onay" value="true">
                    Onay
                </label>
            </div>
            @if (ViewData.ModelState["onay"] != null && ViewData.ModelState["onay"].Errors.Any())
            {
                <div class="alert alert-danger mt-2">
                    @ViewData.ModelState["onay"]?.Errors.FirstOrDefault()?.ErrorMessage
                </div>
            }

            <button type="submit" class="btn btn-primary me-2">Duyuru Ekle </button>
            <a href="/Announcements/Index" class="btn btn-light">Geri Dön</a>
        </form>
    </div>

</div>
<br />

